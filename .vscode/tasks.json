{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-test",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "'build/.dump'",
                "-S",
                ".",
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                ";",
                "cmake",
                "--build",
                "build/.dump",
                "--parallel",
                ";",
                "ctest",
                "--output-on-failure"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "'build/.dump'",
                "-S",
                ".",
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Release",
                ";",
                "cmake",
                "--build",
                "build/.dump",
                "--parallel",
                ";"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./build/Release/ChatBot 0.0.0.0 80",
            "problemMatcher": [],
            "group": "none"
        },
    ]
}